<h1><%= "Event: #{@event.name}" %></h1>

<p>
    <%= "Article: #{@event.article}" %>
</p>

<p>
    <%= "Date: #{@event.date}" %>
</p>

<p>
    <%= "Time: #{@event.start_time}" %>
</p>

<% if @event.recurring? %>
    <p>Dates Scheduled:</p>
    <p>
        <% dates = @event.date_list %>
        <% dates.each do |d| %>
            <%= "#{d.to_s}   " %><br></br>
        <% end %>
    </p>
<% end %>

