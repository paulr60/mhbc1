<h1>Update Site Information</h1>

<div class="row">
	<div class="span8">
        <%=  simple_form_for(@site_info, :html => {:class => 'form-horizontal'}) do |f| %>

            <%= f.input :title %>
            <%= f.input :menubar %>
            <%= f.input :phone %>
            <%= f.input :address %>
            <%= f.input :email %>
            <%= f.input :logo, placeholder: 'Name of photo to use on left of banner area' %>
            <%= f.input :bannerpic, placeholder: 'Name of photo to use on right of banner area' %>
            <%= f.input :logowidth, placeholder: 'Percentage of banner width to use for logo' %>

            <%= f.input :weekly, :as => :text, :input_html => { :rows => 10 } %>

			<%= f.submit 'Save changes', class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
