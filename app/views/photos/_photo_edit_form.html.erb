<h1><%= yield(:header) %></h1>

<div class="row">
	<div class="span8">
		<%= simple_form_for(@photo, :html => {:class => 'form-horizontal',
												:multipart => true }) do |f| %>


			<%= f.input :name %>

			<%= link_to(image_tag(@photo.image_url(:bio), class: "controls"), @photo.image_url) unless @photo.image_url.blank? %>

			<%= f.input :image, :as => :file %>
            <%-# f.input :custom_size, hint: 'For banner pictures only. Width x Height, e.g. 440 x 220' -%>

			<%= f.submit yield(:submit_label), class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
