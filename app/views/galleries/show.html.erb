<h1><%= @gallery.name %></h1>

<% if @gallery.description.blank? == false %>
	<div class="gallery-descriptoin" %>
		<%= raw RedCloth.new(@gallery.description).to_html %>
	</div>
<% end %>

<% @photos = photo_list(@gallery.photos) %>

<div class="photo-grid">
	<% @show_id = false %>
	<% @show_actions = false %>
	<%= render @photos %>
</div>
